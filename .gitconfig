[user]
    name = Your Name
    email = your.email@example.com

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    lg = log --oneline --decorate --all --graph
    amend = commit --amend --no-edit
    undo = reset --soft HEAD~1

[core]
    editor = vim
    autocrlf = input
    excludesfile = ~/.gitignore_global

[push]
    default = simple

[pull]
    rebase = false

[init]
    defaultBranch = main

[merge]
    conflictstyle = diff3

[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
